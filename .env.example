# Example environment variables - copy to `.env` and fill with your real values
# Do NOT commit your `.env` file to source control.

# Database connection (Supabase / Postgres)
DATABASE_URL=postgres://user:pass@localhost:5432/veritas

# Session secret for express-session
SESSION_SECRET=change_this_session_secret

# Node environment
NODE_ENV=development
PORT=5000

# Frontend base URL (used by Vite client)
VITE_API_URL=http://localhost:5000
CLIENT_URL=http://localhost:5173
COOKIE_DOMAIN=localhost
